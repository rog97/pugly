<!-- Dropdown Structure -->
<nav>
  <div class="nav-wrapper">
    <a href="/games" class="brand-logo">pugly.</a>
    <ul class="right hide-on-med-and-down">
      <li><%= link_to 'New Game', new_game_path, class: "new" %></li>

      <!-- Dropdown Trigger -->
      <li><a class="dropdown-button" href="" data-activates="dropdown1"> 
        <% if current_user %>
          <%= current_user.username %>
        <% else %>
          Guest
        <% end %> <i class="material-icons right">arrow_drop_down</i></a></li>
    </ul>
  </div>
</nav>

<ul id="dropdown1" class="dropdown-content">
  <li><a href='#'><% if current_user %>
    <%= link_to 'Profile', user_path(current_user) %>
    <% else %>
    Profile
    <% end %>
  </a></li>
  <li class="divider"></li>
  <li><a href="#"><% if current_user %><%= button_to "Log out", session_path, method: :delete %> <% else %>
          substitute<% end %></a></li>
</ul>

<% if flash[:message] %>
  <div class="message">
    <%= flash[:message] %>
  </div>
<% end %>