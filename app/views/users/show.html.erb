<h1> <%= current_user.username %> </h1>
<p>Events Created: <%= @users.games.count(:id) %></p>
<p>Games: <%= @users.played_games.count(:user_id) %></p>
 <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Sport</th>
        <th>Date</th>
        <th>Time</th>
        <th>Location</th>
        <th>Player per Team</th>
        <th>Fee</th>
      </tr>
    </thead>

    <tbody> <h3>Games Created</h3> 
      <% @users.games.order('date').each do |game| %>
        <tr>
          <td><%= game.name %></td>
          <td><%= game.sport %></td>
          <td><%= game.date %></td>
          <td><%= game.time %></td>
          <td><%= game.location %></td>
          <td><%= game.dynamic %></td>
          <td><%= game.price %></td>
        </tr>
      <% end %>
    </tbody>

  </table>

