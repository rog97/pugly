<p id="notice"><%= notice %></p>

<div class="container">
<h4>
  <%= @game.name %>
</h4>

<p>
  <%= @game.location %>
</p>

<p>
  <strong>Date:</strong>
  <%= @game.date %>
</p>

<p>
  <strong>Time:</strong>
  <%= @game.time %>
</p>

<p>
  <strong>Dynamic:</strong>
  <%= @game.dynamic %>
</p>

<p>
  <strong>Price:</strong>
  <%= @game.price %>
</p>

<p>
  <strong>Organizer:</strong>
  <%= @game.creator.username %>
</p>

<h1>Teams</h1>
<h3>Team A</h3>
<%= @team_a.map(&:username).join(', ') %>
<h3>Team B</h3>
<%= @team_b.map(&:username).join(', ') %>





<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>

<% if @gamePage.players.count(:id) < 14 %>
  <% unless @game.players.include? current_user %>
    <%= button_to 'Join Game', game_enrollments_path(@game) %>
  <% end %>
<%else %> 
  <p> This game is full </p>
<% end %>
</div>